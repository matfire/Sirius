// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Location {
  id        Int   @id @default(autoincrement())
  longitude Float
  latitude  Float
  user      User  @relation(fields: [userId], references: [id])
  userId    Int
}

model Record {
  id        Int      @id @default(autoincrement())
  date      DateTime
  longitude Float
  latitude  Float
}

model Device {
  id       Int    @id @default(autoincrement())
  key      String
  authKey  String
  endpoint String
  user     User   @relation(fields: [userId], references: [id])

  userId Int
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  username  String    @unique
  password  String
  locations Location[]
  devices   Device[]
}
